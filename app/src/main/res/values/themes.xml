<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ClaudeCodeUI" parent="Theme.Material3.DayNight">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:textColorHint">@color/text_disabled_light</item>
        
        <!-- Divider color -->
        <item name="android:dividerHorizontal">@color/divider_light</item>
        
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.ClaudeCodeUI.CardView</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.ClaudeCodeUI.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.ClaudeCodeUI.Button.Outlined</item>
        <item name="materialButtonTextButtonStyle">@style/Widget.ClaudeCodeUI.Button.TextButton</item>
        
        <!-- Text input styles -->
        <item name="textInputStyle">@style/Widget.ClaudeCodeUI.TextInputLayout</item>
        
        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/Widget.ClaudeCodeUI.Toolbar</item>
        
        <!-- Bottom navigation style -->
        <item name="bottomNavigationStyle">@style/Widget.ClaudeCodeUI.BottomNavigation</item>
    </style>
    
    <!-- No Action Bar theme -->
    <style name="Theme.ClaudeCodeUI.NoActionBar" parent="Theme.ClaudeCodeUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Full Screen theme -->
    <style name="Theme.ClaudeCodeUI.FullScreen" parent="Theme.ClaudeCodeUI.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <!-- Card View Style -->
    <style name="Widget.ClaudeCodeUI.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_light</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.ClaudeCodeUI.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Widget.ClaudeCodeUI.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="Widget.ClaudeCodeUI.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Text Input Layout Style -->
    <style name="Widget.ClaudeCodeUI.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_disabled_light</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    
    <!-- Toolbar Style -->
    <style name="Widget.ClaudeCodeUI.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.ClaudeCodeUI.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface_light</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/primary_light</item>
        <item name="elevation">8dp</item>
    </style>
    
    <!-- Chat Message Styles -->
    <style name="Widget.ClaudeCodeUI.ChatMessage.User" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/primary_light</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <style name="Widget.ClaudeCodeUI.ChatMessage.Assistant" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/surface_light</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Code Editor Style -->
    <style name="Widget.ClaudeCodeUI.CodeEditor" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/code_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Terminal Style -->
    <style name="Widget.ClaudeCodeUI.Terminal" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/terminal_background</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    
    <!-- Status Indicator Style -->
    <style name="Widget.ClaudeCodeUI.StatusIndicator" parent="Widget.Material3.CardView">
        <item name="cardBackgroundColor">@color/status_online</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>