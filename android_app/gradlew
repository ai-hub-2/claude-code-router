#!/bin/sh

# Simple gradle wrapper that uses system gradle
# This is a fallback when gradle wrapper jar is not available

echo "Using system gradle..."

# Check if gradle is available
if command -v gradle >/dev/null 2>&1; then
    echo "Gradle found, running: gradle $@"
    exec gradle "$@"
else
    echo "Gradle not found in PATH"
    echo "Please install Gradle or use a proper gradle wrapper"
    exit 1
fi
